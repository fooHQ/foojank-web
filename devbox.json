{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.6/.schema/devbox.schema.json",
  "packages": [
    "pandoc@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "build": [
        "pandoc -o static/index.html --template index.html.in index.md",
        "mkdir -p static/docs && pandoc -o static/docs/index.html --template index.html.in documentation.md"
      ]
    }
  }
}
